{
  "compilerOptions": {
    "allowJs": true,
    "experimentalDecorators": true,
    "strictPropertyInitialization": false,
    "target": "ES2019",
    "module": "CommonJS",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "build",
    "lib": [
      "es2019",
      "dom"
    ]
  },
  "include": [
    "src/**/*.ts"
  ]
}